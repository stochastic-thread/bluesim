<script src="js/graph_library/constant.js"></script>
<script src="js/graph_library/properties.js"></script>
<script src="js/graph_library/helperObjects.js"></script>
<script src="js/graph_library/misc.js"></script>
<script src="js/graph_library/Widget.js"></script>
<script src="js/graph_library/GraphWidget.js"></script>
<script src="js/graph_library/GraphVertexWidget.js"></script>
<script src="js/graph_library/GraphEdgeWidget.js"></script>
<script src="js/widgets/GeometryWidget.js"></script>
<script type="text/javascript">
	//start by showing actions panel
	//enableActionsOnly();
	$('#play').hide();

	var GeometryWidget = new Geometry();
    var gw = GeometryWidget.getGraphWidget(); //usage of gw is inconsistent with other widgets >:(

    function clearScreen() {
        if (isPlaying) stop();
        GeometryWidget.clrscr();
    }

    function perimeter() {
        if(isPlaying) { stop(); }
        gw = GeometryWidget.getGraphWidget();
        setTimeout( function() {
            if((mode=="exploration")&&GeometryWidget.findPerimeter()) {
                $('#current-action').show();
                $('#current-action p').html("Find perimeter");
                $('#progress-bar').slider( "option", "max", gw.getTotalIteration()-1);
                triggerRightPanels();
                isPlaying = true;
            }
        }, 500)
    }

    function isConvex() {
        if(isPlaying) { stop(); }
        gw = GeometryWidget.getGraphWidget();
        setTimeout( function() {
            if((mode=="exploration")&&GeometryWidget.isConvex()) {
                $('#current-action').show();
                $('#current-action p').html("Check if convex");
                $('#progress-bar').slider( "option", "max", gw.getTotalIteration()-1);
                triggerRightPanels();
                isPlaying = true;
            }
        }, 500)
    }

    function grahamScan() {
        if(isPlaying) { stop(); }
        GeometryWidget.initGrahamScan();
        gw = GeometryWidget.getGraphWidget();
        setTimeout( function() {
            if((mode=="exploration")&&GeometryWidget.grahamScan()) {
                $('#current-action').show();
                $('#current-action p').html("Graham Scan");
                $('#progress-bar').slider( "option", "max", gw.getTotalIteration()-1);
                triggerRightPanels();
                isPlaying = true;
            }
        }, 500)
    }

    function checkPointInsidePolygon() {
        if(isPlaying) { stop(); }
        gw = GeometryWidget.getGraphWidget();
        setTimeout( function() {
            if((mode=="exploration")&&GeometryWidget.checkPointInsidePolygon()) {
                $('#current-action').show();
                $('#current-action p').html("Check if point is in polygon: Click to draw your point");
                $('#progress-bar').slider( "option", "max", gw.getTotalIteration()-1);
                triggerRightPanels();
                isPlaying = true;
            }
        }, 500)
    }

    function cutPolygon() {
        if(isPlaying) { stop(); }
        gw = GeometryWidget.getGraphWidget();
        setTimeout( function() {
            if((mode=="exploration")&&GeometryWidget.doCutPolygon()) {
                $('#current-action').show();
                $('#current-action p').html("Cut polygon: click to draw your 2 points");
                $('#progress-bar').slider( "option", "max", gw.getTotalIteration()-1);
                triggerRightPanels();
                isPlaying = true;
            }
        }, 500)
    }

    var isPaused = false;
    function isAtEnd() {
        gw = GeometryWidget.getGraphWidget();
        return (gw.getCurrentIteration()==(gw.getTotalIteration()-1));
    }
    
    function pause() {
        gw = GeometryWidget.getGraphWidget();
        if(isPlaying) {
            isPaused = true;
            gw.pause();
            $('#play').show();
            $('#pause').hide();
        }
    }
    function play() {
        gw = GeometryWidget.getGraphWidget();
        if(isPlaying) {
            isPaused = false;
            $('#pause').show();
            $('#play').hide();
            if(isAtEnd()) {
                gw.replay();
            } else {
                gw.play();
            }
        }
    }
    function stepForward() {
        gw = GeometryWidget.getGraphWidget();
        if(isPlaying) {
            pause();
            gw.forceNext(250);
        }
    }
    function stepBackward() {
        gw = GeometryWidget.getGraphWidget();
        if(isPlaying) {
            pause();
            gw.forcePrevious(250);  
        }
    }
    function goToBeginning() {
        gw = GeometryWidget.getGraphWidget();
        if(isPlaying) {
            gw.jumpToIteration(0,0);
            pause();
        }
    }
    function goToEnd() {
        gw = GeometryWidget.getGraphWidget();
        if(isPlaying) {
            gw.jumpToIteration(gw.getTotalIteration()-1,0);
            pause();
        }
    }
    function stop() {
        gw = GeometryWidget.getGraphWidget();
        try {
            gw.stop();
        } catch(err) {}
        isPaused = false;
        isPlaying = false;
        $('#pause').show();
        $('#play').hide();
        $('#current-action').hide();
    }

    //shortcut keys for playback controls
    $(document).keydown( function(event) {
        var gw = GeometryWidget.getGraphWidget();
        if(event.which == 32) { //spacebar
            if(isPaused) { play(); } else { pause(); }
        } else if(event.which == 37) { //left arrow
            stepBackward();
        } else if(event.which == 39) { //right arrow
            stepForward();
        } else if(event.which == 35) { //end
            stop();
        } else if (event.which == 189) { //minus
            var d = (2200-gw.getAnimationDuration())-100;
            if(d > 0) {
                $("#speed-input").slider("value", d);
            } else {
                $("#speed-input").slider("value", 0);
            }
        } else if (event.which == 187) { //plus
            var d = (2200-gw.getAnimationDuration())+100;
            if(d <= 2000) {
                $("#speed-input").slider("value", d);
            } else {
                $("#speed-input").slider("value", 2000);
            }
        }
    });
    
    //sliders
    $("#speed-input").slider({
        min: 200,
        max: 2000,
        value: 1700,
        change: function(event, ui) {
            var gw = GeometryWidget.getGraphWidget();
            gw.setAnimationDuration(2200-ui.value);
        }
    });
    $("#progress-bar").slider({
        range: "min",
        min: 0,
        value: 0,
        slide: function(event, ui) {
            var gw = GeometryWidget.getGraphWidget();
            gw.pause();
            gw.jumpToIteration(ui.value,0);
        },
        stop: function(event, ui) {
            var gw = GeometryWidget.getGraphWidget();
            if(!isPaused) { setTimeout( function(){gw.play();}, 500) }
        }
    });
</script>

